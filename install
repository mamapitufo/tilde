#!/bin/bash

DOTFILES="$( cd "$( dirname "$0" )" && pwd )"
pushd $DOTFILES

for NAME in */_*; do

  BASENAME=${NAME##*/}
  DOTNAME=${BASENAME##_}

  ln -siv ${DOTFILES}/${NAME} ~/.${DOTNAME}

done

# Vim
#brew install macvim
git clone https://github.com/gmarik/vundle.git ${DOTFILES}/vim/_vim/bundle/vundle
vim +BundleInstall
#pushd ~/.vim/bundle/YouCompleteMe && ./install --clang-completer && popd
pushd ~/.vim/bundle/YouCompleteMe && ./install && popd

pushd ~/.vim/bundle/tern_for_vim && npm install && popd

sudo gem install git-smart

# SSH config still pending...

#--- Homebrew
# autojump
# vagrant-completion
# tmux
# fixes tmux's access to the clipboard:
#   brew install reattach-to-user-namespace --wrap-pbcopy-and-pbpaste

#--- Homebrew cask
# vagrant

popd

