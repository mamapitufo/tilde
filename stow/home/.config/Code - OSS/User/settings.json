{
  /**
   * JavaScript
   */
  "javascript.format.enable": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "search.smartCase": true,

  /**
   * Formatting, encoding, etc.
   */
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.autoGuessEncoding": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/*.sw*": true
  },
  "files.exclude": {
    "**/*.sw*": true
  },

  /**
   * VIM emulation
   */
  "vim.cursorStylePerMode.insert": "underline",
  "vim.cursorStylePerMode.normal": "block",
  "vim.foldfix": true,
  "vim.visualstar": true,
  "vim.leader": " ",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": [":"],
      "commands": ["workbench.actions.showCommands"],
      "silent": true
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"],
      "silent": true
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "f", "s"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "b", "n"],
      "commands": ["workbench.action.nextEditorInGroup"]
    },
    {
      "before": ["<leader>", "b", "p"],
      "commands": ["workbench.action.previousEditorInGroup"]
    },
    {
      "before": ["<leader>", "b", "d"],
      "commands": [":q"]
    },
    {
      "before": ["<leader>", "q", "q"],
      "commands": ["workbench.action.closeWindow"]
    },
    {
      "before": ["<leader>", "t", "t"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "t", "p"],
      "commands": ["workbench.action.closePanel"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    }
  ],

  /**
   * UI
   */
  "breadcrumbs.enabled": false,
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": false,
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "underline-thin",
  "editor.fontFamily": "'Fira Code','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.guides.indentation": false,
  "editor.hover.enabled": false,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "all",
  "editor.showFoldingControls": "never",
  "editor.tabSize": 2,
  "explorer.decorations.colors": false,
  "explorer.openEditors.visible": 0,
  "window.menuBarVisibility": "toggle",
  "workbench.colorTheme": "Verdandi",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.sideBar.location": "right",
  "workbench.tree.renderIndentGuides": "none",

  /**
   * Telemetry nonsense
   */
  "telemetry.telemetryLevel": "off",
  "editor.guides.highlightActiveBracketPair": false,
  "workbench.startupEditor": "none",

  /**
   * Front-end development
   */
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /**
   * Extensions
   */
  "nxConsole.showNodeVersionOnStartup": false
}
